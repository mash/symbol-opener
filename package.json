{
  "name": "symbol-opener",
  "displayName": "Symbol Opener",
  "description": "Opens symbol definitions via URI handler for osc8wrap",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "mash",
  "repository": {
    "type": "git",
    "url": "https://github.com/mash/symbol-opener"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "onStartupFinished"
  ],
  "main": "./out/activate.js",
  "contributes": {
    "configuration": {
      "title": "Symbol Opener",
      "properties": {
        "symbolOpener.multipleSymbolBehavior": {
          "type": "string",
          "enum": ["first", "quickpick"],
          "default": "first",
          "description": "Behavior when multiple symbols match: first (use first result), quickpick (show picker)",
          "scope": "window"
        },
        "symbolOpener.workspaceNotOpenBehavior": {
          "type": "string",
          "enum": ["new-window", "current-window", "error"],
          "default": "new-window",
          "description": "Behavior when the workspace is not open: new-window (open in new window), current-window (open in current window), error (show error)",
          "scope": "window"
        },
        "symbolOpener.retryCount": {
          "type": "number",
          "default": 10,
          "description": "Number of retries when waiting for LSP to be ready",
          "scope": "window"
        },
        "symbolOpener.retryInterval": {
          "type": "number",
          "default": 1000,
          "description": "Interval between retries in milliseconds",
          "scope": "window"
        },
        "symbolOpener.langDetectors": {
          "type": "array",
          "default": [
            { "markers": ["tsconfig.json", "package.json"], "glob": "**/*.{ts,js}", "exclude": "**/node_modules/**" },
            { "markers": ["go.mod"], "glob": "**/*.go", "exclude": "**/vendor/**" },
            { "markers": ["Cargo.toml"], "glob": "**/*.rs", "exclude": "**/target/**" },
            { "markers": ["pyproject.toml", "requirements.txt", "setup.py"], "glob": "**/*.py", "exclude": "**/.venv/**" },
            { "markers": ["Gemfile"], "glob": "**/*.rb", "exclude": "**/vendor/**" },
            { "markers": ["pom.xml", "build.gradle", "build.gradle.kts"], "glob": "**/*.java", "exclude": "**/target/**" }
          ],
          "description": "Language detectors for LSP activation. Each detector has: markers (files indicating language), glob (source file pattern), exclude (optional exclusion pattern)",
          "scope": "window",
          "items": {
            "type": "object",
            "properties": {
              "markers": { "type": "array", "items": { "type": "string" } },
              "glob": { "type": "string" },
              "exclude": { "type": "string" }
            },
            "required": ["markers", "glob"]
          }
        },
        "symbolOpener.logLevel": {
          "type": "string",
          "enum": ["debug", "info"],
          "default": "info",
          "description": "Log level: debug (show all logs), info (show only important messages)",
          "scope": "window"
        },
        "symbolOpener.symbolSortPriority": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["Class", "Interface", "Struct", "Function", "Method", "Constructor", "Constant", "Property", "Field", "Enum", "Variable"],
          "description": "Priority order for sorting symbol search results by SymbolKind. Symbols with kinds listed earlier appear first.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "node --import tsx --test src/test/*.test.ts",
    "install:cursor": "npm run package && cursor --install-extension symbol-opener-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
